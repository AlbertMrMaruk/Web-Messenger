{
  "name": "practicum-module1",
  "version": "1.0.0",
  "description": "Web App",
  "scripts": {
    "test": "ts-mocha -p tsconfig.json  src/**/*.spec.ts",
    "build:webpack": "node ./node_modules/.bin/webpack",
    "lint:es": "node_modules/.bin/eslint . ",
    "lint:style": "npx stylelint .",
    "lint:all": "npm run lint:es && npm run lint:style",
    "build:docker": "docker build -t lesson .",
    "build": "npm run build:docker",
    "dev": "npm run build:webpack &&  node ./server.js",
    "webpack": "npx webpack serve",
    "start": "docker run --rm -it -p 4000:3000 lesson"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlbertMrMaruk/pract-module-1.git"
  },
  "author": "Albert Mr.",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AlbertMrMaruk/pract-module-1/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all test lint:all"
    }
  },
  "homepage": "https://github.com/AlbertMrMaruk/pract-module-1#readme",
  "devDependencies": {
    "@anikin/parcel-transformer-handlebars": "1.0.2",
    "@parcel/transformer-sass": "2.7.0",
    "@parcel/validator-typescript": "2.7.0",
    "@types/chai": "4.3.4",
    "@types/mocha": "10.0.1",
    "@types/uuid": "8.3.4",
    "chai": "4.3.7",
    "css-loader": "6.7.2",
    "eslint": "8.26.0",
    "eslint-config-airbnb": "19.0.4",
    "html-webpack-plugin": "5.5.0",
    "husky": "8.0.2",
    "mocha": "10.1.0",
    "parcel": "2.7.0",
    "sass": "1.56.1",
    "sass-loader": "13.2.0",
    "style-loader": "3.3.1",
    "stylelint": "14.14.0",
    "stylelint-config-standard": "29.0.0",
    "ts-loader": "9.4.1",
    "typescript": "4.8.4",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.0",
    "webpack-dev-server": "4.11.1",
    "webpack-node-externals": "3.0.0"
  },
  "browserModern": "dist/index.html",
  "targets": {
    "browserModern": {
      "engines": {
        "browsers": [
          "last 1 Chrome version"
        ]
      }
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "6.2.0",
    "express": "4.18.1",
    "express-history-api-fallback": "2.2.1",
    "handlebars": "4.7.7",
    "jsdom": "20.0.3",
    "ts-mocha": "10.0.0",
    "uuid": "9.0.0"
  }
}
